#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <time.h>

long add1(long n) {
	long i, sum = 0;
	for (i = 1; i <= n; i++)
		sum += i;
	return sum;
}
long add2(long n) {
	return n*(n + 1) / 2;
}
void Addtime1(long n) {
	clock_t t;
	long sum;
	t = clock();
	sum = add1(n);
	t = clock() - t;
	printf("方法1：\n");
	printf("  结果：1——%ld之和：%ld\n", n, sum);
	printf("  用时：%lf秒\n", ((float)t) / CLOCKS_PER_SEC);
}
void Addtime2(long n) {
	clock_t t;
	long sum;
	t = clock();
	sum = add2(n);
	t = clock() - t;
	printf("方法2：\n");
	printf("  结果：1——%ld之和：%ld\n", n, sum);
	printf("  用时：%lf秒\n", ((float)t) / CLOCKS_PER_SEC);
}
long main() {
	long n;
	printf("n(大于1000000)：");
	scanf("%d", &n);
	Addtime1(n);
	Addtime2(n);
	system("pause");
	return 1;
}
